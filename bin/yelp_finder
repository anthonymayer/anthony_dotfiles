#!/bin/sh

exec find -regextype posix-egrep \
	\( \
		-name build -or -name "www-pkg-*" -or -path './config/locale/messages' \
		-or -name 'sandbox-*' -or -name '.git' -or -name 'logs' \
		-or -name 'files' -or -name 'tmp' \
	\) -prune \
	-or -type f \
	-not -name 'ptraceback_template.py' \
	-not \( -name '*.py' \( -path './*templates/*' -or -path '*/css/*' \) \) \
	-not -regex '.*\.(py[co]|sw[n-z]|dblite|png|swf|jpg|pdf|jar|kmz|gif|js|gz|bz2|zip|war|doc|cod|ttf|shx|shp|mov|db|dat)' \
	"$@"


